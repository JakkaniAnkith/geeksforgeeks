class Solution:
    # Program for zig-zag conversion of array
    def zigZag(self, arr, n):

        for i in range(n-1):
            if i%2==0 and arr[i]>arr[i+1]:
                arr[i],arr[i+1]=arr[i+1],arr[i]
            elif i%2==1 and arr[i]<arr[i+1]:
                arr[i],arr[i+1]=arr[i+1],arr[i]
